{
  "compilerOptions": {
      "skipLibCheck": true,
      "outDir": "dist",
      "declaration": true,
      "declarationMap": true,
      "strict": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "lib": ["dom", "ESNext"],
      "moduleResolution": "nodenext",
      "module": "NodeNext",
	  "paths": {
		"@/*": ["./src/*"]
	  },
  },
  "include": ["./src"]
}
